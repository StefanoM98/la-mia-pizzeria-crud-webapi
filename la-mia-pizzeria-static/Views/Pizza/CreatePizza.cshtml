@model PizzaFormModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Crea una nuova pizza!!</h1>
        </div>
        <form asp-controller="Pizza" asp-action="CreatePizza" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <strong>Titolo:</strong>
                <input type="text" class="form-control" asp-for="Pizza.Name">
                <span asp-validation-for="Pizza.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Descrizione:</strong>
                <input type="text" class="form-control" asp-for="Pizza.Description">
                <span asp-validation-for="Pizza.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Categoria:</strong>
                <select asp-for="Pizza.CategoriaId" rows="10" class="d-block w-100">
                    <option value="">
                        Seleziona la categoria della pizza
                    </option>
                    @foreach(Categoria categoria in Model.Categorie)
                    {
                        <option value="@categoria.Id">
                            @categoria.Name
                        </option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <strong>Seleziona i gusti della pizza:</strong>
                <select asp-for="gustoIdSelezionato"
                        multiple="multiple"
                        size="10"
                        class="form-control mb-2 mr-sm-2 ml-sm-3 leftList"
                        asp-items="@Model.Gusti">
                </select>
            </div>
            <div class="mb-3">
                <strong>URL Immagine:</strong>
                <input type="text" class="form-control" asp-for="Pizza.Pathimg">
                <span asp-validation-for="Pizza.Pathimg" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Prezzo</strong>
                <input type="text" class="form-control" asp-for="Pizza.Price">
                <span asp-validation-for="Pizza.Price" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Crea la nuova pizza</button>
        </form>
    </div>
</div>